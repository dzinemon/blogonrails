
<section class="py-1 bg-light">
  <section class="p-5 bg-white">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <%= form_for @post do |f| %>

            <div class="form-group">
              <%= f.label :title, "Blog Title", :class=> "font-weight-bold" %> <br>
              <%= f.text_field :title, :class=> "form-control form-control-lg" %>
            </div>
            <div class="form-group">
              <%= f.label :body, "Blog Content", :class=> "font-weight-bold" %>
              <%= f.text_area :body, :class=> "form-control form-control-lg" %>
            </div>
            <div class="form-group"><%= f.submit :class=>"btn btn-block btn-outline-dark" %></div>

          <% end %>
        </div>
      </div>
    </div>
  </section>
</section>

  