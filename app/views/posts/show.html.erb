<div class="section py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        <h1 class="display-4"><%= @post.title %></h1>
      </div>
    </div>
  </div>
</div>

<section class="py-1 bg-light">
  <section class="p-5 bg-white">
    <div class="container">
      <div class="row mb-4">
        <div class="col-lg-8 offset-lg-2"><%= @post.body %></div>
      </div>
      <div class="row">
        <div class="col-lg-8 offset-lg-2">&lang; <%= link_to "Go Back to All posts", posts_path, :class => "btn btn-link text-dark font-weight-bold" %></div>
      </div>
    </div>
  </section>
</section>

<section class="p-1 bg-light">
  <section class="bg-light p-5">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to "Edit Post", edit_post_path(@post), :class => "btn btn-outline-dark" %>
            <%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-outline-danger" %>
          </div>
        </div>
      </div>
    </div>
  </section>
</section>
